.left-content p,
.components p {
  & a {
    text-decoration-thickness: 2px;
    text-decoration-color: #9a8b14;
  }

  & a[target='_blank'] {
    @apply items-center;
  }

  /*& a[target='_blank']:after {
    content: '';
    display: block;
    width: 1.55em;
    height: 1.55em;
  }*/
}

.components p {
  & a[target='_blank'] {
    background: url('data:image/svg+xml;base64,');
    background-position: center right;
    background-repeat: no-repeat;
    padding-right: 30px;
  }
}

.left-content p {
  & a[target='_blank'] {
    background: url('data:image/svg+xml;base64,');
    background-position: center right;
    background-repeat: no-repeat;
    padding-right: 30px;
  }
}

.left-content .download-icon {
  @apply text-primary-yellow;
}

.bg-primary-red {
  & a {
    text-decoration-thickness: 2px;
    text-decoration-color: white;
  }

  & .left-content p,
  .components p {
    & a[target='_blank'] {
      background: url('data:image/svg+xml;base64,');
      background-position: center right;
      background-repeat: no-repeat;
      padding-right: 30px;
    }
  }
}

.bg-primary-yellow {
  & a {
    text-decoration-thickness: 2px;
    text-decoration-color: #012e5a;
  }
}

a.anchor {
  display: block;
  position: relative;
  top: -150px;
  visibility: hidden;
}
